<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity">

    <TextView
        android:id="@+id/forget_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You forgotted your password ? No Problem enter your Email and Login here and we will send you your password "
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/login_forget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Login : "
        android:layout_below="@+id/forget_txt"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/email_forget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Email : "
        android:layout_below="@+id/login_forget_text"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/login_forget_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:hint="login "
        android:layout_below="@+id/forget_txt"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="30dp"
        />

    <EditText
        android:id="@+id/email_forget_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="90dp"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/login_forget_input"
        />

    <Button
        android:id="@+id/forget_send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_below="@id/email_forget_input"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/forget_sent_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="we have sent you an email ! check your Inbox Email..."
        android:visibility="invisible"
        android:layout_below="@+id/forget_send_btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="25dp"
        />
</RelativeLayout>