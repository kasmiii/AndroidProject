<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please write your Shipment Detail"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/shippement_name"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@id/txt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"

        android:background="@drawable/input"

        android:hint="Yout Name" />

    <EditText
        android:id="@+id/shippement_phone_number"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@id/shippement_name"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input"
        android:hint="Yout Phone Number"

         />

    <EditText
        android:id="@+id/shippement_home_address"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@id/shippement_phone_number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input"
        android:hint="Yout Home Address "

        />

    <EditText
        android:id="@+id/shippement_city_name"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@id/shippement_home_address"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Yout City Name "
        android:background="@drawable/input"

        />

    <Button
        android:id="@+id/confirm_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Confirm "
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        />

</RelativeLayout>