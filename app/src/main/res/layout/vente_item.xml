<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:cardElevation="15dp"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/shopping_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/shopping_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:layout_below="@+id/shopping_product_image"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textSize="24dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/shopping_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopping_product_name"
            android:text="Product Description"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"

            />

        <TextView
            android:id="@+id/shopping_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopping_product_description"
            android:text="quantity :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/shopping_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="17$"
            android:layout_below="@id/shopping_product_description"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/colorPrimaryDark"
            />

        <Button
            android:id="@+id/shopping_status_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="status"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/shopping_product_quantity"
            android:textSize="20sp"
            android:textStyle="italic"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>